<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/subtitle1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="축제 정보"
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="18dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/festival_1"
                    android:layout_width="60dp"
                    android:layout_height="60dp">

                    <ImageView
                        android:id="@+id/festival_1_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profile"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#66FFFFFF"/>

                    <TextView
                        android:id="@+id/festival_1_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00월"
                        android:textColor="@android:color/black"
                        android:layout_centerInParent="true"
                        android:layout_margin="2dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/festival_2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:id="@+id/festival_2_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/june"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#66FFFFFF"/>

                    <TextView
                        android:id="@+id/festival_2_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00월"
                        android:textColor="@android:color/black"
                        android:layout_centerInParent="true"
                        android:layout_margin="2dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/festival_3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:id="@+id/festival_3_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/june"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#66FFFFFF"/>

                    <TextView
                        android:id="@+id/festival_3_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00월"
                        android:textColor="@android:color/black"
                        android:layout_centerInParent="true"
                        android:layout_margin="2dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/festival_4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:id="@+id/festival_4_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/june"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#66FFFFFF"/>

                    <TextView
                        android:id="@+id/festival_4_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00월"
                        android:textColor="@android:color/black"
                        android:layout_centerInParent="true"
                        android:layout_margin="2dp"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/festival_5"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp">

                    <ImageView
                        android:id="@+id/festival_5_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/june"
                        android:scaleType="centerCrop"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#66FFFFFF"/>

                    <TextView
                        android:id="@+id/festival_5_month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00월"
                        android:textColor="@android:color/black"
                        android:layout_centerInParent="true"
                        android:layout_margin="2dp"/>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="요즘 뜨는 여행기"
            android:textSize="24sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"
            android:textColor="@android:color/black" />

        <RelativeLayout
            android:id="@+id/hot_plan_layout"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/hot_plan_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#88FFFFFF"/>

            <TextView
                android:id="@+id/hot_plan_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경주 여행기"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/subtitle3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="요즘 뜨는 여행지"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="18dp"/>

        <RelativeLayout
            android:id="@+id/hot_sight_layout"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/hot_sight_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#88FFFFFF"/>

            <TextView
                android:id="@+id/hot_sight_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보문단지"
                android:textColor="@android:color/black"
                android:textSize="20sp"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>